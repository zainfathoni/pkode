{
  "name": "pkode",
  "version": "0.0.0-semantically-released",
  "description": "CLI toolbox for common scripts for my projects",
  "type": "commonjs",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "bin": {
    "pkode": "./dist/index.js"
  },
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "ts": "node -r esbuild-register src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zainfathoni/pkode.git"
  },
  "keywords": [
    "scripts"
  ],
  "author": "Zain Fathoni <me@zainf.dev> (https://zainfathoni.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zainfathoni/pkode/issues"
  },
  "homepage": "https://github.com/zainfathoni/pkode#readme",
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0",
    "npm": ">=6"
  },
  "devDependencies": {
    "esbuild": "0.14.43",
    "esbuild-register": "3.3.3",
    "microbundle": "0.15.0"
  },
  "dependencies": {
    "cross-spawn": "7.0.3"
  }
}
